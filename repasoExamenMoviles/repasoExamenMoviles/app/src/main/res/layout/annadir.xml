<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textActividadEliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Añadir Becas"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textAnnadirBecaNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre:" />

        <EditText
            android:id="@+id/textAnnadirNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textAnnadirBecaValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valor:" />

        <EditText
            android:id="@+id/textAnnadirValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnAnnadirBecas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Añadir Beca" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>